
pipeline{
  agent any
   

tools{

    nodejs 'node'
   }
 
   
  stages {

  stage('Install dependencies') {
      steps{
        
        script {

         sh('npm install')
        }
      }
    }


 
 

 stage('Build application') {
       steps{
        
         script {
    
          sh('npm run build')
         }
       }
     }

     stage('Deploy nexus ') { 
       steps{
        
         script {
       sh('npm run deploy ')
        }
       }
    }
     stage('build image docker  ') { 
      steps{
        
        script {
         sh('docker build . ')
        } 
      }
    }

   
  } 

}
